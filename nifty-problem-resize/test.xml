<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="start">
        <layer id="layer" backgroundColor="#0000" width="100%" childLayout="center">
            <panel id="panel_top" height="25%" backgroundColor="#f008" width="75%" align="center" childLayout="center"/>
            <panel id="panel_mid" height="50%" backgroundColor="#0f08" width="75%" align="center" childLayout="center"/>
            <panel id="panel_bottom" height="25%" backgroundColor="#00f8" width="75%" align="center" childLayout="horizontal">
                <panel id="panel_bottom_left" height="50%" backgroundColor="#44f8" width="50%" childLayout="center" valign="center"/>
                <panel id="panel_bottom_right" height="50%" backgroundColor="#88f8" width="50%" childLayout="center" valign="center"/>
            </panel>
        </layer>
    </screen>
    <screen id="hud">
        <layer id="foreground" backgroundColor="#0000" childLayout="horizontal">
            <panel id="panel_left" height="100%" width="90%" childLayout="vertical"/>
            <panel id="panel_right" height="100%" backgroundColor="#00f8" width="10%" childLayout="vertical">
                <panel id="panel_top_right1" height="15%" backgroundColor="#00f8" width="100%" childLayout="center"/>
                <panel id="panel_top_right2" height="15%" backgroundColor="#44f8" width="100%" childLayout="center"/>
                <panel id="panel_bot_right" height="70%" backgroundColor="#88f8" width="100%" valign="center"/>
            </panel>
        </layer>
    </screen>
</nifty>
